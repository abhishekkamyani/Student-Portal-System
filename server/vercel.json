{
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api(/.*)?", "dest": "index.js" },
    { "src": "/(student|admin)(/.*)?", "dest": "public/index.html" },
    { "src": "/(.*)", "dest": "public/index.html", "status": 404 }
  ]
}
